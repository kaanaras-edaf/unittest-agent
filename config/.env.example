# Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (required if using OpenAI models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (required if using Anthropic models)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# GitHub Token (required for GitHub Actions integration)
# Use GitHub Secrets in workflows, set here only for local development
GITHUB_TOKEN=ghp_your-github-token-here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default AI model to use
# Options: openai:gpt-4, openai:gpt-4-turbo, openai:gpt-3.5-turbo,
#          anthropic:claude-3-sonnet, anthropic:claude-3-haiku, anthropic:claude-3-opus
DEFAULT_MODEL=openai:gpt-4

# Maximum tokens for AI responses
# Higher values = more detailed tests but higher cost
# Recommended: 2000-8000
MAX_TOKENS=4000

# AI model temperature (0-1)
# Lower = more consistent, Higher = more creative
# Recommended: 0.1-0.3 for code generation
TEMPERATURE=0.2

# =============================================================================
# FILE PATHS
# =============================================================================

# Default documentation file patterns
# Comma-separated glob patterns
DOCS_PATH=./*/md/*.md,./md/*.md,./docs/**/*.md

# Default AL code file patterns
CODE_PATH=./**/*.al

# Default output directory for generated tests
OUTPUT_PATH=./tests

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================

# GitHub repository (auto-detected in GitHub Actions)
# Format: owner/repository-name
GITHUB_REPOSITORY=

# Base branch for comparison (auto-detected in GitHub Actions)
GITHUB_BASE_REF=main

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable debug logging
DEBUG=false

# Custom OpenAI base URL (for OpenAI-compatible APIs)
OPENAI_BASE_URL=https://api.openai.com/v1

# Custom Anthropic base URL
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Request timeout in milliseconds
REQUEST_TIMEOUT=60000

# Maximum retry attempts for API calls
MAX_RETRIES=3

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================

# Skip GitHub API calls during local development
LOCAL_MODE=false

# Use sample data instead of real repository analysis
USE_SAMPLE_DATA=false

# Cache directory for API responses (speeds up development)
CACHE_DIR=./.cache

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum number of files to process in parallel
MAX_CONCURRENT_FILES=5

# Maximum file size to analyze (in bytes)
MAX_FILE_SIZE=1048576

# Skip binary files
SKIP_BINARY_FILES=true

# =============================================================================
# TEST GENERATION OPTIONS
# =============================================================================

# Include private methods in test generation
INCLUDE_PRIVATE_METHODS=false

# Generate negative test scenarios
GENERATE_NEGATIVE_TESTS=true

# Include performance tests
INCLUDE_PERFORMANCE_TESTS=false

# Test coverage target (0-1)
TARGET_COVERAGE=0.8

# =============================================================================
# OUTPUT FORMATTING
# =============================================================================

# Line ending style (crlf, lf)
LINE_ENDINGS=crlf

# Indentation (spaces or tabs)
INDENTATION=    

# Include file headers in generated tests
INCLUDE_FILE_HEADERS=true

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Post comments on pull requests
POST_PR_COMMENTS=true

# Create GitHub issues for failed test generation
CREATE_ISSUES_ON_FAILURE=false

# Notification webhook URL (optional)
WEBHOOK_URL=

# =============================================================================
# SECURITY
# =============================================================================

# Scan generated tests for potential security issues
SECURITY_SCAN=true

# Allowed file extensions for analysis
ALLOWED_EXTENSIONS=.al,.md,.json,.yml,.yaml

# Maximum depth for directory traversal
MAX_DIRECTORY_DEPTH=10