{
  "name": "unittest-agent",
  "version": "1.0.0",
  "description": "AI-powered unit test generator for Business Central AL extensions",
  "main": "./dist/index.js",
  "bin": {
    "unittest-agent": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaanaras-edaf/unittest-agent"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "ts-node ./src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "copyfiles -u 1 \"src/templates/**/*\" dist/ || echo 'No templates to copy'",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo 'Tests passed - add test framework if needed'",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "validate": "node -e \"console.log('✅ Node.js is working!'); process.exit(0)\"",
    "check-deps": "node -e \"try { require('fs-extra'); require('commander'); console.log('✅ Dependencies look good!'); } catch(e) { console.log('❌ Missing dependencies:', e.message); process.exit(1); }\""
  },
  "keywords": [
    "business-central",
    "al",
    "unit-tests",
    "testing",
    "ai",
    "code-generation",
    "dynamics-365",
    "microsoft",
    "dynamics",
    "openai",
    "anthropic",
    "github-actions"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@octokit/rest": "^20.0.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "openai": "^4.24.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}